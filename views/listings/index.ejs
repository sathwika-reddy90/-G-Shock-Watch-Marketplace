<% layout('layouts/boilerplate') %>
<body style="font-family: 'Roboto', sans-serif; background-color: #f9f9f9; margin: 0; padding: 0; color: #333;">
 
<div style="text-align: center; padding: 40px; background-color: #2C3E50; color: white;">
    <h1 style="font-size: 30px; font-weight: 700;">"Tough, Stylish, Unstoppable."</h1>
    <h3 style="font-size: 23px; font-weight: 400;">Explore All Watches</h3>
    <form method="GET" action="/listings/new" style="margin-top: 20px;">
        <button style="padding: 12px 30px; font-size: 18px; color: #fff; background-color: #E74C3C; border: none; border-radius: 30px; cursor: pointer; transition: background-color 0.3s ease;">
            <span style="font-weight: bold;">Create New Listing</span>
        </button>
    </form>
</div>
 
<div style="display: flex; flex-wrap: wrap; gap: 30px; padding: 40px; justify-content: center;">
    <% for (let listing of allListings) { %>
        <div class="listing-card" style="border: none; padding: 25px; width: 300px; border-radius: 12px; background: linear-gradient(135deg, #ffffff, #f0f4f8); box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1); transition: transform 0.3s ease, box-shadow 0.3s ease;">
            <img src="<%= listing.image.url %>" alt="<%= listing.Brand %>" style="width: 100%; height: 200px; object-fit: cover; border-radius: 10px;">
            <h3 style="font-size: 22px; margin-top: 15px; color: #34495E; font-weight: 600;"> <%= listing.Category %> </h3>
            <p style="font-size: 16px; color: #7F8C8D; margin: 10px 0; line-height: 1.5;"> <%= listing.Description %> </p>
            <p style="font-size: 16px; color: #34495E; margin: 8px 0;"><strong>Brand:</strong> <%= listing.Brand %></p>
            <p style="font-size: 16px; color: #34495E; margin: 8px 0;"><strong>Price:</strong> â‚¹<%= listing.Price.toLocaleString("en-IN") %></p>
            <p style="font-size: 16px; color: #34495E; margin: 8px 0;"><strong>Strap Type:</strong> <%= listing.Strap_Type %></p>
            <p style="font-size: 16px; color: #34495E; margin: 8px 0;"><strong>Warranty:</strong> <%= listing.Warranty %></p>
            <p style="font-size: 16px; color: #34495E; margin: 8px 0;"><strong>Available:</strong> <%= listing.Availability %></p>
        </div>
    <% } %>
</div>

<!-- Listing Links Section -->
<div style="text-align: center; margin-top: 40px; padding: 20px; background-color: #ecf0f1;">
    <ul style="list-style: none; padding: 0;">
        <% for(let listing of allListings){ %>
            <li style="display: inline-block; margin: 5px; font-size: 18px;">
                <a href="/listings/<%= listing._id %>" style="text-decoration: none; color: #2980B9; font-weight: 500; transition: color 0.3s ease;">
                    <%= listing.Category %>
                </a>
            </li>
        <% } %>
    </ul>
</div>

<!-- Footer Section -->
<div style="text-align: center; padding: 40px; background-color: #2C3E50; color: white;">
    <p style="font-size: 14px;">&copy; 2025 AmeYYY. All rights reserved.</p>
</div>

<!-- CSS for Hover Effect on Cards and Responsive Layout -->
<style>
    .listing-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 12px 24px rgba(0, 0, 0, 0.1);
    }

    button:hover {
        background-color: #C0392B;
    }

    a:hover {
        color: #E74C3C;
    }

    /* Responsive layout for displaying 3 cards per row */
    @media (min-width: 768px) {
        .listing-card {
            width: 30%; /* Three cards per row */
        }
    }

    @media (max-width: 768px) {
        .listing-card {
            width: 100%; /* One card per row on small screens */
        }
    }
</style>
</body>
