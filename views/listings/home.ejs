<% layout('layouts/boilerplate') %>

<style>
  body, html {
    margin: 0;
    padding: 0;
    height: 100%;
    font-family: 'Roboto', sans-serif;
  }

  .hero {
    background-image: url('https://images.unsplash.com/photo-1620883114190-78c3e773f49d?fm=jpg&q=60&w=3000&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MTV8fGclMjBzaG9ja3xlbnwwfHwwfHx8MA%3D%3D');
    background-size: cover;
    background-position: center;
    height: 75vh;  
    position: relative;
    color: white;
  }

  .overlay {
    position: absolute;
    top: 0; left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,0.5);
    z-index: 1;
  }

  .content {
    position: absolute;
    bottom: 40px;
    left: 50px;
    z-index: 2;
    max-width: 600px;
    text-align: left;
  }

  .content h1 { 
    font-size: 37px;
    margin-bottom: 20px;
    color: #fff;
  }

  .content p {
    font-size: 20px;
    margin-bottom: 30px;
    color: #e0e0e0;
  }

  .content a button {
    padding: 12px 24px;
    font-size: 18px;
    background-color: #8a443d;
    color: rgb(253, 241, 241);
    border: none;
    border-radius: 8px;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  .content a button:hover {
    background-color: #c0392b;
  }
</style>

<div class="hero">
  <div class="overlay"></div>
  <div class="content">
    <h1>Welcome to the World of G-Shock</h1>
    <p>Explore powerful, durable, and stylish watches built to last.</p>
    <a href="/listings"><button>View Listings</button></a>
  </div>
</div>
